    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'magwords'",
            "cargo": {
                "args": ["build", "--bin=magwords", "--package=magwords"],
                "filter": {
                    "name": "magwords",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "USE_PROXY": "true",
                "RUST_LOG": "INFO,socketioxide=INFO,engineioxide=INFO,magwords=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'magwords'",
            "cargo": {
                "args": ["test", "--no-run", "--bin=magwords", "--package=magwords"],
                "filter": {
                    "name": "magwords",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "USE_PROXY": "true",
                "RUST_LOG": "INFO,socketioxide=INFO,engineioxide=INFO,magwords=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration_tests'",
            "cargo": {
                "args": ["test", "--no-run", "--test=integration_tests", "--package=magwords"],
                "filter": {
                    "name": "integration_tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "USE_PROXY": "true",
                "RUST_LOG": "INFO,socketioxide=INFO,engineioxide=INFO,magwords=TRACE"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "terminal": "console"
        }
    ]
}
