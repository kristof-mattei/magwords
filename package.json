{
  "name": "magwords",
  "version": "0.0.0-development",
  "description": "It's written in Rust!",
  "type": "module",
  "main": "src/main.rs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest --coverage.enabled=true",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettier": "prettier --write .",
    "release": "semantic-release",
    "deps:ci": "depcruise --output-type err front-end/src",
    "deps:graph": "depcruise --output-type dot front-end/src | dot -T svg > dependency-graph.svg",
    "deps:report": "depcruise --output-type err-html --output-to dependency-report.html front-end/src",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kristof-mattei/magwords"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kristof-mattei/magwords/issues"
  },
  "dependencies": {
    "socket.io-client": "4.7.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix -- ",
      "depcruise --include-only ^front-end/src/ --validate -- "
    ],
    "*": [
      "prettier --ignore-unknown --write --"
    ]
  },
  "homepage": "https://github.com/kristof-mattei/magwords#readme",
  "devDependencies": {
    "@actions/tool-cache": "2.0.1",
    "@codecov/vite-plugin": "0.0.1-beta.10",
    "@rollup/plugin-inject": "5.0.5",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/github": "10.1.7",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/eslint": "9.6.0",
    "@types/node": "20.16.1",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vitest/coverage-v8": "2.0.5",
    "bootstrap": "5.3.3",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "dependency-cruiser": "16.4.0",
    "eslint": "8.57.0",
    "eslint-config-love": "47.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.5",
    "nock": "13.5.5",
    "prettier": "3.3.3",
    "sass": "1.77.8",
    "semantic-release": "24.1.0",
    "semver": "7.6.3",
    "serialize-error": "11.0.3",
    "typescript": "5.5.4",
    "vite": "5.4.2",
    "vite-plugin-checker": "0.7.2",
    "vite-plugin-svgr": "4.2.0",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.0.5"
  },
  "overrides": {},
  "publishConfig": {
    "access": "restricted"
  }
}
